{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs\\log.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithExceptionDetails" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ],
    "Properties": {

    }
  },
  "Kestrel": {
    "Endpoints": {
      "HttpsInlineCertFile": {
        "Url": "https://client.ziralink.local:8197",
        "Certificate": {
          "Path": "server.pfx",
          "Password": "zira_cert"
        }
      }
    }
  },
  "ASPNETCORE_ENVIRONMENT": "Development",
  "ZIRALINK_CONNECTIONSTRINGS_RABBITMQ": "amqp://user:Pass123$@localhost:5772/",
  "ZIRALINK_URL_IDS": "https://ids.ziralink.local:5001",
  "ASPNETCORE_URLS": "http://+8196;https://+:8197",
  "ASPNETCORE_HTTPS_PORT": "8197",
  "ASPNETCORE_Kestrel__Certificates__Default__Password": "zira_cert",
  "ASPNETCORE_Kestrel__Certificates__Default__Path": "server.pfx"
}
